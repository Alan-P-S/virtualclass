    <style>
        *{
            margin: 0;
            padding: 0;
            font-family: "Inter", sans-serif;
        }
        .container{
            display: flex;
            flex-direction: column;
            height: 100vh;
        }
        .nav{
            display: flex;
            flex-direction: row;
            color: white;
            width: 100%;
            height: auto;
            background-color: rgb(48, 48, 48);
            flex-shrink: 0;
        }
        .first{
            display: flex;
            align-items: center;
            color: rgb(255, 255, 255);
            /* background-color: gray; */
            height: 100%;
            width: 10%;
        }
        .first h4{
            margin-left: 20px;
            float: left;
        }
        .navbtn{
           width: 80%;
           display: flex;
           flex-direction: row;
           justify-content: center;
           align-items: center;
           float: right;

           padding: 10px;
           gap: 10px;
        }
        .navbtn a{
            text-decoration: none;
            color: black;
            border-radius: 10px;
            padding: 9px;
            background-color: aliceblue;
            transition: 0.5s ease-out;
        }
        .navbtn a:hover{
            color: white;
            background-color: rgb(0, 31, 88);
        }
        .third{
            display: flex;
            justify-content: center;
            align-items: center;
            /* background-color: rgb(75, 75, 75); */
            height: 100%;
            width: 10%;
        }
        .login{
            border-radius: 10px;
            padding: 10px;
            
            color: black;
            font-weight: 500;
            width: 50px;
            text-align: center;
            background-color: white;
        }
        .login a{
            color: black;
            text-decoration: none;
        }
        .body{
            font-size: 30px;
            text-align: center;
            overflow-y: auto;
        }

        @media screen and (max-width:560px){
            .navbtn{
            width: 80%;
           display: flex;
           flex-direction: column;
           justify-content: center;
           align-items: center;
           float: right;
           padding: 10px;
           gap: 10px;
            }

            .navbtn a{
            text-decoration: none;
            color: black;
            border-radius: 10px;
            width: 100px;
            text-align: center;
            padding: 9px;
            background-color: aliceblue;
            transition: 0.5s ease-out;
        }
        .navbtn a:hover{
            color: white;
            background-color: rgb(0, 31, 88);
        }
        .first{
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 0px;
            margin-inline: auto;
