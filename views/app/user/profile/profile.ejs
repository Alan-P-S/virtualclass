<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
     <style>
@import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap');
</style>
    <style>
        *{
            padding: 0;
            margin: 0;
            font-family: "Poppins", sans-serif;
            text-decoration: none;
        }
        #container{
            height: 100vh;
            display: flex;
            flex-direction: column;
            gap: 10px;
            justify-content: center;
            background-color: rgb(36, 36, 36);
            align-items: center;
        }
        #profile{
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            background-color: antiquewhite;
            height: 100px;
            width: 250px;
        }
        #box{
            display: grid;
            grid-template-columns: auto auto auto auto auto;
            gap: 2px;
            padding: 10px;
            height: auto;
            width: auto;
            border-radius: 5px;
            background-color: rgb(230, 230, 230);
        }

        .row{
            display: flex;
            height: 25px;
            gap: 2px;
            width: 100%;
     
            flex-direction: row;

        }

        .day{
            display: flex;
            align-items: center;
            flex-direction: column;
            justify-content: center;
            font-size: 10px;
            color: white;
            background-color: rgb(49, 150, 56);
            border-radius: 4px;
            width: 50px;
            height: 50px;
        }
        .evening{
            display: flex;
            align-items: center;
            flex-direction: column;
            justify-content: center;
            font-size: 10px;
            color: white;
            background-color: rgb(29, 131, 38);
            border-radius: 4px;
            width: 50px;
            height: 50px;
        }
        .morning{
            display: flex;
            align-items: center;
            flex-direction: column;
            justify-content: center;
            font-size: 10px;
            color: white;
            background-color: rgb(69, 184, 94);
            border-radius: 4px;
            width: 50px;
            height: 50px;
        }
        #boxContainer{
            display: flex;
            flex-direction: column;
        }
        #boxheading{
            margin-left: 10px;
            color: white;
        }
    </style>
</head>
<body>
    <div id="container">
        <div id="profile">
        <h3>Welcome <%=user.name%></h3>
        <p style="color: white;"><a href="/">Explore</a></p>
    </div>
    <div id="boxContainer">
        <div id="boxheading"><p>Attendence Pool</p></div>
    <div id="box">
            <% const month = ['Jan','Feb','Mar','Apr','May','June','July','Aug','Sept','Oct','Nov','Dec']%>
            <%data.forEach(d=>{%>
                <% if(d.status.toString()=='approved' && d.session.toString()=='morning'){%>
                    <a href="<%=d.image%>"><div id="day" class="<%=d.session%>"><p><%=d.createdAt.getDate()%></p><p><%=month[d.createdAt.getMonth()]%></p></div></a>
                <%}else if(d.status.toString()=='approved' && d.session.toString()=='evening'){%>
                    <a href="<%=d.image%>"><div id="day" class="<%=d.session%>"><p><%=d.createdAt.getDate()%></p><p><%=month[d.createdAt.getMonth()]%></p></div></a>
                <%}%>
            <%})%>
        </div>
        </div>
        <div id="boxContainer">
        <div id="boxheading"><p>Exams Attended</p></div>
    <div id="box">
            <% let i=1%>
            <%marks.forEach(mark=>{%>
                    <div id="day" class="day"><p><%=i%></p></div>
                    <%i++%>
            <%})%>
        </div>
        </div>
        </div>
    </div>
</body>
<script>
</script>
</html>